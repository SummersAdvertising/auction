<p>商品名稱：<%= @product.name %>
</p>
<p>訂購數量：<%= params[:deal][:amount] %></p>

<%= form_for(@deal, :url => deals_path) do |f| %>
<%= f.hidden_field :product_id %><%= f.hidden_field :amount %>
<p>取件人姓名：<%= f.text_field :buyername %></p>
<p>取件人電話：<%= f.text_field :buyertel %></p>

<%= f.submit "確定購買" %>

<% end %>