<% if @orders.length > 0 %>

<table>
	<tr>
		<th>日期</th><th>訂單編號</th><th>狀態</th>
	</tr>
	<% @orders.each do |order| %>
	<tr>
		<td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
		<td><%= link_to order.ordernum, useradmin_order_path(order) %></td>
		<td><%= order.status %></td>
	</tr>
	<% end %>
</table>

<% else %>

<p>沒有任何訂單記錄。</p>

<% end %>