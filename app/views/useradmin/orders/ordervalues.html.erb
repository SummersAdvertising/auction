<p>訂單日期：<%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></p>
<p>訂單編號：<%= @order.ordernum %></p>
<p>訂單狀態：<%= @order.status %></p>
<% if(@order.ordervalues.length > 0) %>
<p>評價：<%= @order.ordervalues.last.value %></p>
<% end %>
<p>購買人：<%= @order.buyername %></p>
<p>電話：<%= @order.buyertel %></p>

<p><%= @order.productname %></p>
<p>金額：<%= @order.productprice %></p>
<p>數量：<%= @order.amount %></p>

<hr>

<% if(@order.ordervalues.length > 0) %>
	<h4>評價紀錄</h4>
	<% @order.ordervalues.each do |ordervalue| %>
	<p><%= ordervalue.created_at.strftime("%Y-%m-%d %H:%M") %> <%= ordervalue.user_id %>: <%= ordervalue.value %> <%= ordervalue.comment %></p>
	<% end %>
<% end %>

<%= form_for(@ordervalue, :url => createvalue_useradmin_order_path(@order)) do |f| %>
評價：<%= f.radio_button :value, "優良" %>優良 <%= f.radio_button :value, "普通" %>普通 <%= f.radio_button :value, "差" %>差<br>
<%= f.text_area :comment, :rows => "5" %><br>
<%= f.submit "評價" %>
<% end %>

<p><%= link_to "返回交易", useradmin_order_path(@order) %></p>