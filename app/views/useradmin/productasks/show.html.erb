<% if @productask %>
<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<p>
  <b>Status:</b>
  <%= @product.status %>
</p>

<input id="article_content" style="display:none;" type="text" value="<%= @product.description %>">
<div id="articleContent"></div>

<div>
	<p>問題：</p>
	<%= @productask.created_at.strftime("%Y-%m-%d %H:%M") %>
	<%= simple_format(@productask.content) %>

		<% @productask.productaskres.each do |productaskre| %>
			<%= productaskre.created_at.strftime("%Y-%m-%d %H:%M") %><br>
			<%= simple_format(productaskre.content) %></p>
		<% end %>
</div>
<div>
	<p>回覆</p>
	<%= form_for(@productaskre, :url => reply_useradmin_productask_path(params[:id]) ) do |f| %>
	<%= f.text_area :content, :rows => "5" %><br>
	<%= f.submit "回覆" %>
	<% end %>
</div>

<% else %>
<p>找不到該筆記錄。</p>
<% end %>

<%= link_to "返回問與答列表", useradmin_productasks_path %>

<script type="text/javascript">
$(document).ready(function() {
  editor.output();
});
</script>
